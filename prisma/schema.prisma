// Miranda - Prisma Schema
// Next.js 15+ / PostgreSQL

// URL de connexion : prisma.config.ts (Migrate) + adapter dans lib/prisma.ts (runtime)
datasource db {
  provider = "postgresql"
}

generator client {
  provider = "prisma-client-js"
}

// --------------------------------------
// 1. UTILISATEURS & RÔLES
// --------------------------------------

enum Role {
  USER
  ADMIN
  SUPER_ADMIN
}

model User {
  id                    String    @id @default(uuid())
  email                 String    @unique
  fullName              String?
  password              String
  role                  Role      @default(USER)
  isSubscriptionActive  Boolean   @default(false)
  subscriptionEndDate   DateTime?
  createdAt             DateTime  @default(now())
  updatedAt             DateTime  @default(now()) @updatedAt

  accounts    Account[]
  sessions    Session[]
  abonnements Abonnement[]
  downloads   Download[]
}

// NextAuth v5 (Prisma Adapter)
model Account {
  id                String  @id @default(uuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token     String? @db.Text
  expires_at       Int?
  token_type       String?
  scope             String?
  id_token         String? @db.Text
  session_state    String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(uuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// --------------------------------------
// 2. STRUCTURE ACADÉMIQUE
// --------------------------------------

model Niveau {
  id     Int    @id @default(autoincrement())
  numero Int    @unique // 1 ou 2
  label  String // ex: "Niveau 1", "Niveau 2"

  filiereNiveaux FiliereNiveau[]
}

model Filiere {
  id          String   @id @default(uuid())
  nom         String
  code        String   @unique // ex: SPH, IGC, MF
  couleur     String   // hex ex: #22c55e
  description String?  @db.Text
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  filiereNiveaux FiliereNiveau[]
  matieres       Matiere[]
}

// Table pivot Filiere <-> Niveau
model FiliereNiveau {
  id         String   @id @default(uuid())
  filiereId  String
  niveauId   Int
  createdAt  DateTime @default(now())

  filiere Filiere @relation(fields: [filiereId], references: [id], onDelete: Cascade)
  niveau  Niveau  @relation(fields: [niveauId], references: [id], onDelete: Cascade)
  epreuves Epreuve[]

  @@unique([filiereId, niveauId])
}

model Matiere {
  id        String   @id @default(uuid())
  nom       String
  filiereId String
  createdAt DateTime @default(now())

  filiere Filiere  @relation(fields: [filiereId], references: [id], onDelete: Cascade)
  epreuves Epreuve[]
}

// --------------------------------------
// 3. ÉPREUVES
// --------------------------------------

enum TypeEpreuve {
  CONCOURS
  CC
  SN
  EPREUVE_SIMPLE
}

model Epreuve {
  id               String       @id @default(uuid())
  titre            String
  type             TypeEpreuve
  fichierEpreuve   String       // URL ou chemin du PDF
  fichierCorrige   String?      // optionnel
  isGratuit        Boolean      @default(false)
  isPublished      Boolean      @default(false)
  filiereNiveauId  String
  matiereId        String
  createdAt        DateTime     @default(now())
  updatedAt        DateTime     @updatedAt

  filiereNiveau FiliereNiveau @relation(fields: [filiereNiveauId], references: [id], onDelete: Cascade)
  matiere       Matiere       @relation(fields: [matiereId], references: [id], onDelete: Cascade)
  downloads     Download[]
}

// --------------------------------------
// 4. ABONNEMENTS & TÉLÉCHARGEMENTS
// --------------------------------------

model Abonnement {
  id        String   @id @default(uuid())
  userId    String
  prix      Float
  dateDebut DateTime
  dateFin   DateTime
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

enum DownloadType {
  EPREUVE
  CORRIGE
}

model Download {
  id        String       @id @default(uuid())
  userId    String
  epreuveId String
  type      DownloadType
  createdAt DateTime     @default(now())

  user    User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  epreuve Epreuve @relation(fields: [epreuveId], references: [id], onDelete: Cascade)
}

// --------------------------------------
// 5. PARAMÈTRES GLOBAUX (singleton)
// --------------------------------------

model SystemSettings {
  id               Int     @id @default(1)
  prixAbonnement   Float   @default(1000)
  contactEmail     String?
  contactTel       String?
  contactAdresse   String? @db.Text
  updatedAt       DateTime @updatedAt
}
